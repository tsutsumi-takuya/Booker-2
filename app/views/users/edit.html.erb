<div class='body'>
<div class='container'>

<h2>User info</h2>

<%= render 'users/error', user: @user %>

<%= form_for(@user) do |f| %>

<div class="field">
    <label for="user_name">Name</label>
    <%= f.text_field :name %>
</div>

<div class="field">
    <label for="user_image">Image</label>
    <%= f.attachment_field :profile_image %>
</div>

<div class="field">
    <label for="user_introduction">Introduction</label>
    <%= f.text_area :introduction %>
</div>
<br><%= f.submit 'Update User' %></br>
<% end %>
    