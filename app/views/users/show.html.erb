<div class='body'>
	<div class='container'>
		<div class='col-xs-3'>
		<h2>User info</h2>
		<%= attachment_image_tag @user, :profile_image ,:fill, 60, 60 ,format: :jpeg %>
		<table class='table table-hover table-inverse'>
      	<tbody>
			<tr>
				<th>name</th>
				<th><%= @user.name %></th>
			</tr>

			<tr>
				<th>introduction</th>
				<th><%= @user.introduction %></th>
			</tr>

		</tbody>
		</table>

		<%= link_to edit_user_path(current_user.id), method: :get do %>
			<span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
		<% end %>
				<h2>New book</h2>
				<!-- form_for部分 -->
				<%= form_for(@book) do |f| %>

				<label for="title">Title</label>
				<br><%= f.text_field :title %><br>
				<br><label for="body">Opinion</label><br>
				<%= f.text_area :body %>
				<br><%= f.submit 'Create Book' %></br>
				<% end %>
		</div>

	<div class="col-xs-9">
		<h2>Books</h2>
		 <table class='table table-hover table-inverse'>
		  <thead>
			<tr>
				<th></th>
				<th>Title</th>
				<th>Opinion</th>
				<th colspan="3"></th>
			</tr>
			</thead>
			<tbody>
				<% @books.each do |book| %>
				<tr>
					<td><%= attachment_image_tag @user, :profile_image ,:fill, 60, 60 %></td>
					<td><%= book.title %></td>
					<td><%= book.body %></td>
				</tr>
				<% end %>
			</tbody>
		</thead>
	</table>
	</div>
</div>
</div>