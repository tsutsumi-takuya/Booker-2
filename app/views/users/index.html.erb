<div class='body'>
	<div class='container'>

		<% if flash[:notice] %>
 			<p><%= flash[:notice] %></p>
		<% end %>

	<div class='row'>
		<div class='col-xs-3'>
			<h2>User info</h2>
			<%= attachment_image_tag current_user, :profile_image, :fill, 60, 60, format:'jpeg', fallback: "no_image.jpg" %>
			<table class='table table-hover table-inverse'>
				<tr>
					<th>name</th>
					<th><%= current_user.name %></th>
				</tr>

				<tr>
					<th>introduction</th>
					<th><%= current_user.introduction %></th>
				</tr>
			</table>

		<div class='row'>
			<%= link_to edit_user_path(current_user.id), method: :get do %>
			<span class="col-xs-12 btn btn-default glyphicon glyphicon-wrench "></span>
			<% end %>
		</div>

		<h2>New book</h2>
		<!-- form_for部分 -->
		<%= form_for(@book) do |f| %>

		<div class="field row">
			<label for="title">Title</label>
			<br><%= f.text_field :title ,class:"col-xs-12"%></br>
		</div>

		<div class="field row">
			<label for="body">Opinion</label>
			<%= f.text_area :body ,class:"col-xs-12"%>
		</div>

		<div class="actions row">
			<%= f.submit 'Create Book',class:"btn btn-primary col-xs-12" %>
			<% end %>
		</div>

	</div>

	<div class="col-xs-9">
		<h2>Users</h2>
		 <table class='table table-hover table-inverse'>
		  <thead>
			<tr>
				<th>image</th>
				<th>name</th>
				<th></th>
				<th colspan="3"></th>
			</tr>
			</thead>

			<tbody>
				<% @users.each do |user| %>
				<tr>
					<td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg',fallback: "no_image.jpg", size:"40x40" %>
					</td>
					<td><%= user.name %></td>
					<td><%= link_to 'Show', user_path(user.id)%></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>

</div>
</div>