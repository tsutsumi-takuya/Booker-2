
<h2>User info</h2>

      <!-- form_for部分 -->
      <%= form_for(@user) do |f| %>

      <label for="name">Name</label>
      <%= f.text_field :name %>

      <label for="ptofile_image">Image</label>
      <%= f.text_area :profile_image %>

      <label for="introduction">Introduction</label>
      <%= f.text_field :introduction %>

      <%= f.submit 'Update User' %>

      <% end %>