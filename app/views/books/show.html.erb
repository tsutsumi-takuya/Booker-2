<div class='body'>
  <div class='container'>
    <div class='col-xs-3'>
    <h2>User</h2>
    <%= attachment_image_tag(@user, :profile_image, :fill, 60, 60, format: 'jpeg',fallback: "noimage.jpg") %>
    <table class='table table-hover table-inverse'>
        <tbody>
      <tr>
        <th>name</th>
        <th><%= @user.name %></th>
      </tr>

      <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
      </tr>

    </tbody>
    </table>

    <%= link_to edit_user_path(current_user.id), method: :get do %>

      <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
    <% end %>
  </div>

  <div class="col-xs-9">
    <h2>Book Detail</h2>
     <table class='table table-hover table-inverse'>
      <thead>
        <tr>
          <th colspan="5"></th>
        </tr>
      </thead>

      <tbody>
        <tr>
          <td><%= attachment_image_tag @book.user, :profile_image ,:fill, 60, 60 %></td>
          <td><%= @book.title %></td>
          <td><%= @book.body %></td>
          <td><%= link_to 'Edit', edit_book_path(@book.id) %></td>
          <td><%= link_to 'Destroy', book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？"%></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
</div>