<div class='body'>
	<div class='container'>
		<div class='col-xs-3'>
			<h2>User info</h2>
			<h3>Name</h3>
			<%= attachment_image_tag @user, :profile_image ,:fill, 60, 60 %>
			<%= @user.name %>
			<h3>introduction</h3>
			<%= @user.introduction %>
			<%= link_to "編集",edit_user_path(current_user.id) %>

<h2>New book</h2>
<!-- form_for部分 -->
<%= form_for(@book) do |f| %>

	<label for="title">Title</label>
	<%= f.text_field :title %>
	<label for="body">Body</label>
	<%= f.text_area :body %>
	<br><%= f.submit 'Create Book' %></br>

<% end %>

<h1>Books</h1>
<table class="table table-striped">
	<thead>
		<tr>
			<th></th>
			<th>title</th>
			<th>Opinion</th>
			<th colspan="3"></th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
		<tr>
			<td><%= book.title %></td>
			<td><%= book.body %></td>
			<td><%= link_to book.title, book_path(book.id) %></td>
		</tr>
		<% end %>
	</tbody>
</table>
