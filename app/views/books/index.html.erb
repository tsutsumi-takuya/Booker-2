<div class='body'>
	<div class='container'>

		<% if flash[:notice] %>
    	<p><%= flash[:notice] %></p>
    	<% end %>
		<%= render 'books/error', book: @book %>
		
		<div class='col-xs-3'>
		<h2>User info</h2>
		<%= attachment_image_tag(@user, :profile_image, :fill, 60, 60, format: 'jpeg',fallback: "no_image.jpg") %>
		<table class='table table-hover table-inverse'>
      	<tbody>
			<tr>
				<th>name</th>
				<th><%= @user.name %></th>
			</tr>

			<tr>
				<th>introduction</th>
				<th><%= @user.introduction %></th>
			</tr>

		</tbody>
		</table>

			<%= link_to edit_user_path(current_user.id), method: :get do %>
			<span class="col-xs-12 btn btn-default glyphicon glyphicon-wrench "></span>
			<% end %>

			<br></br>

			<h2>New book</h2>
			<!-- form_for部分 -->
			<%= form_for(@book) do |f| %>
			
			<label for="title">Title</label>
			<br><%= f.text_field :title ,class:"col-xs-12"%></br>

			<br><label for="body">Opinion</label></br>
			<%= f.text_area :body ,class:"col-xs-12"%>
			
			<br><%= f.submit 'Create Book',class:"btn btn-primary col-xs-12" %></br>
			<% end %>
		</div>

	<div class="col-xs-9">
		<h2>Books</h2>
		 <table class='table table-hover table-inverse'>
		  <thead>
			<tr>
				<th></th>
				<th>Title</th>
				<th>Opinion</th>
				<th colspan="3"></th>
			</tr>
			</thead>
			<tbody>
				<% @books.each do |book| %>
				<tr>
					<td><%= attachment_image_tag(@user, :profile_image, :fill, 40, 40, format: 'jpeg',fallback: "no_image.jpg") %></td>
					<td><%= link_to book.title, book_path(book.id) %></td>
					<td><%= book.body %></td>
				</tr>
				<% end %>
			</tbody>
		</thead>
	</table>
	</div>
</div>
</div>