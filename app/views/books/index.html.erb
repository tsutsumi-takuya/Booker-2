<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>
</div>

<h2>User info</h2>
<%= form_for(@book) do |f| %>

<h3>Name</h3>
<%= f.text_field :title %>
<h3>Image</h3>
<%= f.attachment_field :profile_image_id %>
<h3>introduction</h3>
<%= f.text_area :introduction %>
<br><%= f.submit 'Update User' %></br>
<% end %>

<h2>New book</h2>
<!-- form_for部分 -->
<%= form_for(@book) do |f| %>

<%= render 'views/error', book: @book %>

	<label for="title">Title</label>
	<%= f.text_field :title %>
	<label for="body">Body</label>
	<%= f.text_area :body %>
	<br><%= f.submit 'Create Book' %></br>

<% end %>

<h1>Books</h1>
<table class="table table-striped">
	<thead>
		<tr>
			<th></th>
			<th>title</th>
			<th>Opinion</th>
			<th colspan="3"></th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
		<tr>
			<td><%= book.title %></td>
			<td><%= book.body %></td>
			<td><%= link_to book.title, book_path(book.id) %></td>
		</tr>
		<% end %>
	</tbody>
</table>
